---
import "../styles/site.css";
import Header from "./Header.astro";
import Footer from "./Footer.astro";

const title = Astro.props.title || "The Bait Beater - Fish Smarter, Catch More";
const description =
  Astro.props.description || "Astro is a modern static site builder.";
const lang = Astro.props.lang || "nl";
---

<html lang={lang}>
  <head>
    <!--Remove this before life -->
    <meta name="robots" content="noindex, nofollow" />
    <!--/Remove this before life -->
    <base href="/bait-beater-site/" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />

    <!-- specifiy later 
    <meta property="og:title" content="" />
    <meta property="og:type" content="" />
    <meta property="og:url" content="" />
    <meta property="og:image" content="" />
    <meta property="og:image:alt" content="" />
        <link rel="manifest" href="site.webmanifest" />
        <meta name="theme-color" content="#fafafa" />
    //-->

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
